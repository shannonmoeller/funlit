{
  "name": "funlit",
  "version": "0.0.1-alpha.3",
  "description": "Function Lit elements.",
  "author": "Shannon Moeller <me@shannonmoeller.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --fix '**/*.{js,ts}' && prettier --write '**/*.{html,css,js}' && tsc"
  },
  "type": "module",
  "main": "funlit.js",
  "dependencies": {
    "lit-html": "^3.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "prettier": {
    "singleQuote": true
  }
}
