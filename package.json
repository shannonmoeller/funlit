{
  "name": "funlit",
  "version": "0.0.1-alpha.7",
  "description": "Function Lit elements.",
  "author": "Shannon Moeller <me@shannonmoeller.com>",
  "license": "MIT",
  "scripts": {
    "preversion": "npm run lint && npm run build",
    "lint": "npm run lint-js && npm run lint-format && npm run lint-types",
    "lint-js": "eslint --ignore-path .gitignore --fix '**/*.{js,ts}'",
    "lint-format": "prettier --ignore-path .gitignore --write '**/*.{html,css,js,ts}'",
    "lint-types": "tsc",
    "build": "tsc -p tsconfig.build.json"
  },
  "type": "module",
  "main": "funlit.js",
  "files": [
    "*.{d.ts,d.ts.map,js,md}"
  ],
  "peerDependencies": {
    "lit-html": ">= 2.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "lit-html": "^3.1.1",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
